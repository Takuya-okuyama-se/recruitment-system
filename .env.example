# データベース接続設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sunstar_recruitment
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
APP_DB_USER=app_user
APP_DB_PASSWORD=CHANGE_THIS_APP_PASSWORD

# SSL証明書パス
DB_CA_CERT=/path/to/ca-cert.pem
DB_CLIENT_CERT=/path/to/client-cert.pem
DB_CLIENT_KEY=/path/to/client-key.pem

# 暗号化キー（32バイトの16進数文字列）
MASTER_KEY_SECRET=GENERATE_64_CHAR_HEX_STRING
ENCRYPTION_KEY=GENERATE_ANOTHER_64_CHAR_HEX_STRING

# JWT設定
JWT_SECRET=GENERATE_STRONG_JWT_SECRET
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# セッション設定
SESSION_SECRET=GENERATE_STRONG_SESSION_SECRET
SESSION_TIMEOUT=1800000

# Redis設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# セキュリティ設定
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true

# CORS設定
ALLOWED_ORIGINS=https://hr.sunstar.com,https://admin.sunstar.com
ALLOWED_METHODS=GET,POST,PUT,DELETE
ALLOWED_HEADERS=Content-Type,Authorization

# レート制限
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# 監査ログ
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_LEVEL=info

# 環境設定
NODE_ENV=production
PORT=5000

# 通知設定（オプション）
SMTP_HOST=smtp.sunstar.com
SMTP_PORT=587
SMTP_USER=notifications@sunstar.com
SMTP_PASSWORD=CHANGE_THIS_SMTP_PASSWORD

# バックアップ設定
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=GENERATE_BACKUP_ENCRYPTION_KEY

# 外部サービス（必要に応じて）
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=ap-northeast-1
# S3_BACKUP_BUCKET=sunstar-recruitment-backups